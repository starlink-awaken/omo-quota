{
  "name": "@omo-quota/cli",
  "version": "1.0.0",
  "description": "Oh-My-OpenCode 配额管理和策略切换 CLI 工具",
  "type": "module",
  "bin": {
    "omo-quota": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "install-global": "bun link",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,jsonc,md,yml,yaml}\"",
    "test": "bun test"
  },
  "dependencies": {
    "@omo-quota/core": "workspace:*",
    "asciichart": "^1.5.25",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "chartscii": "^3.2.0",
    "commander": "^14.0.2",
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@types/asciichart": "^1.5.8",
    "@types/bun": "^1.3.8",
    "@types/node": "^25.1.0",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3"
  }
}
