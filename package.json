{
  "name": "omo-quota-monorepo",
  "version": "1.0.0",
  "description": "Oh-My-OpenCode 配额管理和策略切换工具 - Monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:core && bun run build:cli && bun run build:plugin",
    "build:core": "cd packages/core && bun run build",
    "build:cli": "cd packages/cli && bun run build",
    "build:plugin": "cd packages/plugin && bun run build",
    "dev": "bun run dev:cli",
    "dev:cli": "cd packages/cli && bun run dev",
    "dev:plugin": "cd packages/plugin && bun run dev",
    "test": "bun run test:cli && bun run test:plugin",
    "test:cli": "cd packages/cli && bun test",
    "test:plugin": "cd packages/plugin && bun test",
    "test:watch": "bun run test:cli --watch",
    "lint": "bun run lint:cli && bun run lint:plugin",
    "lint:cli": "cd packages/cli && bun run lint",
    "lint:plugin": "cd packages/plugin && bun run lint",
    "clean": "rm -rf packages/*/dist packages/*/node_modules",
    "typecheck": "bun run typecheck:cli && bun run typecheck:plugin",
    "typecheck:cli": "cd packages/cli && tsc --noEmit",
    "typecheck:plugin": "cd packages/plugin && bun run typecheck"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "^25.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
